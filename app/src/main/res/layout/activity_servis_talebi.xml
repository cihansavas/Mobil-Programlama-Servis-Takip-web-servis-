<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_servis_talebi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cihan_sf2ak5t.mobilservis.ServisTalebi">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="İs Takip No:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="34dp"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Başlık:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="82dp"
            android:id="@+id/textView2"
            android:textSize="18sp" />

        <TextView
            android:text="id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="36dp"
            android:id="@+id/id_textView"
            android:textSize="18sp" />

        <TextView
            android:text="Açıklama:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="166dp"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:layout_alignStart="@+id/textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="165dp"
            android:id="@+id/aciklamaeditText2"
            android:text="açiklama içeriği"
            android:focusable="false" />

        <TextView
            android:text="Yorum:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="204dp"
            android:id="@+id/textView5"
            android:textSize="18sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="179dp"
            android:id="@+id/yorum_editText"
            android:text="Yorum içeriği" />

        <TextView
            android:text="islem durumu:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="98dp"
            android:id="@+id/textView6" />

        <Button
            android:text="GERİ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anasayfayagit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/baslik_editText"
            android:text="baslik icerigi"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignStart="@+id/aciklamaeditText2"
            android:focusable="false" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/anasayfayagit"
            android:layout_toEndOf="@+id/id_textView">

            <RadioButton
                android:text="Beklemede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/beklemede"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:text="Tamamlandi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tamamlandi"
                android:layout_weight="1" />
        </RadioGroup>

        <Button
            android:text="Güncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/anasayfayagit" />

    </RelativeLayout>


</RelativeLayout>
